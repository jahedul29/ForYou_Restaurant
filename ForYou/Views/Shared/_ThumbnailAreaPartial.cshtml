@model IEnumerable<MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.CategoryName.Replace(" ", string.Empty) menu-foryou">
        <div class="row">
            <h3 class="text-primary">@Model.FirstOrDefault().Category.CategoryName</h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px;margin-top:10px;padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="99%" style="border-radius:10px; border:1px solid black" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:maroon">@item.MenuItemName</label>
                            </div>
                            <div class="col-4 text-right" style="color:maroon;">
                                <h4>BDT @item.Price</h4>
                            </div>
                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>

                        <div class="col-md-3 offset-md-9 col-sm-12 text-center">
                            <a class="btn btn-success form-control" asp-action="Details" asp-route-id="@item.MenuItemId">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


