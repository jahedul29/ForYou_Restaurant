@model ForYou.Models.Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="text-info">Category Details</h3>
<br />
<form method="post" asp-action="Details">
    <input type="hidden" asp-for="CategoryId" />
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" readonly asp-route-id="@Model.CategoryId" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButtonPartial" model="@Model.CategoryId" />
            </div>
        </div>
    </div>
</form>



