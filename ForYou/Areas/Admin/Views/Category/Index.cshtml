@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="backgroundWhite border">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info">Category List</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial"/>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.CategoryName)</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.CategoryName)</td>
                        <td><partial name="_TableButtonPartial" model="@item.CategoryId"/> </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p> No category exist...</p>
        }
    </div>
</div>

