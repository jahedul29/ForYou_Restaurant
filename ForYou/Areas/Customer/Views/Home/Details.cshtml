@model ShoppingCart
@using ForYou.Extension
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="text-info">Item Details</h3>
<br />


<form method="post" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="border backgroundWhite row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.MenuItemName"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="MenuItem.MenuItemName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.MenuItem.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="MenuItem.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.CategoryId"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="MenuItem.Category.CategoryName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategoryId"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="MenuItem.SubCategory.SubCategoryName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness"></label>
                </div>
                <div class="col-8">
                    <select disabled asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Count"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Count" class="form-control" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"></div>
                <div class="col-4">
                    <a class="btn btn-primary form-control" asp-action="Index">Back To List</a>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-success form-control" value="Add To Cart">Add To Cart</button>
                </div>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border: 1px solid black;" />
        </div>

        <input type="hidden" asp-for="MenuItemId" />
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

